<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="Color1">#EDE7F6</Color>
    <Color x:Key="Color2">#D1C4E9</Color>
    <Color x:Key="Color3">#B39DDB</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Color1}"/>
    <SolidColorBrush x:Key="ControlBrush" Color="{StaticResource Color2}"/>
    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource Color3}"></SolidColorBrush>
</ResourceDictionary>